<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl1"
    android:layout_width="wrap_content"
    android:layout_marginLeft="@dimen/margin_lg"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/imv_rl"
        android:layout_width="@dimen/size6"
        android:background="@drawable/circle_shape"
        android:backgroundTint="@color/lgry"
        android:layout_centerHorizontal="true"
        android:layout_height="@dimen/size6">
        <ImageView
            android:layout_width="@dimen/size2"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/logo"
            android:tint="@color/gry"
            android:layout_height="@dimen/size2"/>
        <ImageView
            android:id="@+id/imv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
             />
</RelativeLayout>

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin1"
        android:layout_below="@id/imv_rl"
        android:singleLine="true"
        android:fontFamily="@font/font2"
        android:includeFontPadding="false"
        android:text="Cat Name"
        android:maxLength="15"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_size_md" />

</RelativeLayout>