<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">
    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/tool_with_shadow"
        android:scaleType="fitXY"
        android:layout_height="@dimen/size7"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/margin"
        android:paddingRight="@dimen/margin"
        android:layout_height="@dimen/size62">
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab1"
        android:layout_width="wrap_content"
        android:src="@drawable/left_icon"
        android:tint="@color/white"
        android:onClick="BackNow"
        android:scaleY=".7"
        android:layout_centerVertical="true"
        android:scaleX=".7"
        android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/fab2"
            android:layout_width="@dimen/size5"
            android:src="@drawable/cart_icon"
            android:tint="@color/white"
            android:background="@drawable/circle_shape"
            android:padding="@dimen/margin"
            android:backgroundTint="@color/app_color"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_height="@dimen/size5"/>
        <TextView
            android:id="@+id/count_txt"
            android:layout_width="wrap_content"
            android:background="@drawable/circle_shape"
            android:textColor="@color/white1"
            android:backgroundTint="@color/yellow"
            android:text="0"
            android:layout_alignRight="@id/fab2"
            android:layout_alignBottom="@id/fab2"
            android:visibility="gone"
            android:includeFontPadding="false"
            android:paddingLeft="@dimen/margin"
            android:paddingRight="@dimen/margin"
            android:paddingTop="@dimen/sizesm1"
            android:paddingBottom="@dimen/sizesm1"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"

            android:src="@drawable/logo"
            android:layout_centerVertical="true"

            android:layout_height="@dimen/size2"/>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>