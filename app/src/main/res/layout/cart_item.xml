<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_lg"
    android:background="@drawable/round_ract0"
    android:backgroundTint="@color/white1"
    android:padding="@dimen/margin">

    <RelativeLayout
        android:id="@+id/hd1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/imv_rl"
            android:layout_width="@dimen/size61"
            android:layout_centerVertical="true"
            android:layout_height="@dimen/size61">
            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/logo"
                android:tint="@color/gry"
                android:padding="@dimen/margin_lg"
                android:background="@drawable/round_ract0"
                android:backgroundTint="@color/lgry"
                android:layout_height="match_parent"/>
            <com.inone.app.other.CustomImageView
                android:id="@+id/location_icon"
                android:layout_width="match_parent"
                android:src="@drawable/tmp3"
                android:layout_height="match_parent" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/imv_rl">
            <ImageView
                android:id="@+id/cross_icon"
                android:layout_width="@dimen/size1"
                android:layout_height="@dimen/size1"
                android:padding="@dimen/sizesm"
                android:layout_alignParentRight="true"
                android:src="@drawable/cross_icon" />
            <RelativeLayout
                android:id="@+id/right_rl"
                android:layout_width="wrap_content"
                android:layout_below="@id/cross_icon"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right">



                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="@dimen/margin1">

                    <ImageView
                        android:id="@+id/add_icon"
                        android:layout_width="@dimen/size2"
                        android:layout_height="@dimen/size2"
                        android:layout_centerVertical="true"
                        android:src="@drawable/add_icon" />



                    <TextView
                        android:id="@+id/txt0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin"
                        android:layout_marginRight="@dimen/margin"
                        android:layout_toRightOf="@id/add_icon"
                        android:fontFamily="@font/font2"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_size_md1" />
                    <ImageView
                        android:id="@+id/minus_icon"
                        android:layout_width="@dimen/size2"
                        android:layout_height="@dimen/size2"
                        android:layout_toRightOf="@id/txt0"
                        android:layout_centerVertical="true"
                        android:src="@drawable/minus_icon" />
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/margin1"
                android:layout_toLeftOf="@id/right_rl"
                android:fontFamily="@font/font2"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="Lorem ipsome"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_size_lg" />

            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt1"
                android:layout_marginLeft="@dimen/margin1"
                android:layout_marginTop="@dimen/margin"
                android:text="100 Inr."
                android:fontFamily="@font/font1"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textColor="@color/dgry"
                android:textSize="@dimen/txt_size_md" />

            <TextView
                android:id="@+id/txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt2"
                android:layout_marginLeft="@dimen/margin1"
                android:layout_marginTop="@dimen/margin"
                android:text="70 Inr."
                android:fontFamily="@font/font1"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textColor="@color/dgry"
                android:textSize="@dimen/txt_size_md" />
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>