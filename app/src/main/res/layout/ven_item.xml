<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_lg"
    android:background="@drawable/round_ract0"
    android:backgroundTint="@color/white1"
    android:padding="@dimen/margin">

    <RelativeLayout
        android:id="@+id/hd1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/imv_rl"
            android:layout_width="@dimen/size61"
            android:layout_centerVertical="true"
            android:layout_height="@dimen/size61">
            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/logo"
                android:tint="@color/gry"
                android:padding="@dimen/margin_lg"
                android:background="@drawable/circle_shape"
                android:backgroundTint="@color/lgry"
                android:layout_height="match_parent"/>
            <com.inone.app.other.CustomImageView
                android:id="@+id/imv"
                android:src="@drawable/tmp1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/imv_rl">



            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/margin1"
                android:fontFamily="@font/font2"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="Lorem Ipsome is"

                android:textColor="@color/black"
                android:textSize="@dimen/txt_size_lg" />
            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt1"
                android:layout_marginTop="@dimen/margin"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/margin1"
                android:fontFamily="@font/font1"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="Lorem Ipsome is"

                android:textColor="@color/black"
                android:textSize="@dimen/txt_size_md1" />

        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>