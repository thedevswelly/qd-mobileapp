<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl1"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/margin_lg"
    android:background="@drawable/round_ract0"
    android:backgroundTint="@color/white"
    android:padding="@dimen/margin1"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:id="@+id/hd1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imv"
            android:layout_width="@dimen/size4"
            android:src="@drawable/user_icon"
            android:tint="@color/dgry1"
            android:layout_centerVertical="true"
            android:layout_height="@dimen/size4"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/imv"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="Lorem Ipsome is"
                android:layout_marginLeft="@dimen/margin1"
                android:includeFontPadding="false"
                android:fontFamily="@font/font_mid"
                android:textColor="@color/black"

                android:textSize="@dimen/txt_size_lg"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:layout_below="@id/txt1"
                android:text="Lorem Ipsome is the dummy content for "
                android:includeFontPadding="false"
                android:layout_marginLeft="@dimen/margin1"
                android:fontFamily="@font/font1"
                android:layout_marginTop="@dimen/margin"
                android:textColor="@color/dgry"
                android:textSize="@dimen/txt_size"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>