<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/swipe1"
    android:layout_height="match_parent"
    android:background="@color/lgry">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/my_tool1" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rl1"
            android:layout_marginTop="@dimen/margin"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/margin"
                android:layout_height="wrap_content"
                android:elevation="@dimen/margin_md"
                android:outlineAmbientShadowColor="@color/dgry"
                android:outlineSpotShadowColor="@color/dgry"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/margin_lg">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="@dimen/margin"
                    android:layout_height="wrap_content">



                    <RelativeLayout
                        android:id="@+id/top_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true">

                        <RelativeLayout
                            android:id="@+id/imv_rl"
                            android:layout_width="@dimen/size61"
                            android:onClick="EditNow"
                            android:layout_height="@dimen/size61"
                            android:layout_centerVertical="true">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/circle_shape"
                                android:backgroundTint="@color/lgry"
                                android:onClick="EditNow"
                                android:padding="@dimen/margin_md"
                                android:src="@drawable/user_icon"
                                android:tint="@color/dgry" />

                            <ImageView
                                android:id="@+id/imv"
                                android:onClick="EditNow"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/imv_rl"
                            android:paddingLeft="@dimen/margin_md">

                            <TextView
                                android:id="@+id/txt1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/font2"
                                android:text="John Smith"
                                android:includeFontPadding="false"
                                android:textColor="@color/black"
                                android:textSize="@dimen/txt_size_lg" />

                            <TextView
                                android:id="@+id/txt2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/txt1"
                                android:layout_marginTop="@dimen/margin"
                                android:text="+913434343434"
                                android:fontFamily="@font/font2"
                                android:includeFontPadding="false"
                                android:textColor="@color/dgry"
                                android:textSize="@dimen/txt_size_md1" />
                        </RelativeLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_below="@id/top_rl"
                        android:paddingLeft="@dimen/margin"
                        android:layout_marginTop="@dimen/margin_md"
                        android:layout_height="wrap_content">
                    </RelativeLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_below="@id/header"
                android:layout_marginTop="@dimen/margin_md"

                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"

                            android:layout_height="wrap_content">
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                app:cardCornerRadius="@dimen/margin_md"
                                app:cardBackgroundColor="@color/white"
                                android:layout_margin="@dimen/margin"
                                android:onClick="PenNow"
                                android:outlineAmbientShadowColor="@color/dgry"
                                android:outlineSpotShadowColor="@color/dgry"
                                android:layout_height="wrap_content">
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:padding="@dimen/margin_md"
                                    android:onClick="PenNow"
                                    android:layout_height="match_parent">
                                    <TextView
                                        android:id="@+id/t0"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/font3"
                                        android:includeFontPadding="false"
                                        android:onClick="PenNow"
                                        android:text="0"
                                        android:layout_centerHorizontal="true"
                                        android:padding="@dimen/margin_md"
                                        android:background="@drawable/circle_shape"
                                        android:backgroundTint="@color/lgry"
                                        android:gravity="center"
                                        android:singleLine="true"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/txt_size_lg" />

                                    <TextView
                                        android:layout_centerHorizontal="true"
                                        android:layout_below="@id/t0"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/font1"
                                        android:includeFontPadding="false"
                                        android:text="Pending"
                                        android:onClick="PenNow"
                                        android:layout_marginTop="@dimen/margin1"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/txt_size_lg" />
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                app:cardCornerRadius="@dimen/margin_md"
                                android:layout_margin="@dimen/margin"
                                android:onClick="ComNow"
                                app:cardBackgroundColor="@color/white"
                                android:outlineAmbientShadowColor="@color/dgry"
                                android:outlineSpotShadowColor="@color/dgry"
                                android:layout_height="wrap_content">
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:padding="@dimen/margin_md"
                                    android:onClick="ComNow"
                                    android:layout_height="match_parent">
                                    <TextView
                                        android:id="@+id/t1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/font3"
                                        android:includeFontPadding="false"
                                        android:text="0"
                                        android:onClick="ComNow"
                                        android:layout_centerHorizontal="true"
                                        android:padding="@dimen/margin_md"
                                        android:background="@drawable/circle_shape"
                                        android:backgroundTint="@color/lgry"
                                        android:gravity="center"
                                        android:singleLine="true"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/txt_size_lg" />

                                    <TextView
                                        android:layout_centerHorizontal="true"
                                        android:layout_below="@id/t1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/font1"
                                        android:includeFontPadding="false"
                                        android:text="Completed"
                                        android:onClick="ComNow"
                                        android:layout_marginTop="@dimen/margin1"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/txt_size_lg" />
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal"
                        android:weightSum="2">
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                app:cardCornerRadius="@dimen/margin_md"
                                android:layout_margin="@dimen/margin"
                                android:onClick="FailedNow"
                                app:cardBackgroundColor="@color/white"
                                android:outlineAmbientShadowColor="@color/dgry"
                                android:outlineSpotShadowColor="@color/dgry"
                                android:layout_height="wrap_content">
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:padding="@dimen/margin_md"
                                    android:onClick="FailedNow"
                                    android:layout_height="match_parent">
                                    <TextView
                                        android:id="@+id/t2"
                                        android:onClick="FailedNow"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/font3"
                                        android:includeFontPadding="false"
                                        android:text="0"
                                        android:layout_centerHorizontal="true"
                                        android:padding="@dimen/margin_md"
                                        android:background="@drawable/circle_shape"
                                        android:backgroundTint="@color/lgry"
                                        android:gravity="center"
                                        android:singleLine="true"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/txt_size_lg" />

                                    <TextView
                                        android:layout_centerHorizontal="true"
                                        android:layout_below="@id/t2"
                                        android:onClick="FailedNow"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/font1"
                                        android:includeFontPadding="false"
                                        android:text="Canceled"
                                        android:layout_marginTop="@dimen/margin1"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/txt_size_lg" />
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                app:cardCornerRadius="@dimen/margin_md"
                                android:layout_margin="@dimen/margin"
                                android:onClick="DriversNow"
                                app:cardBackgroundColor="@color/white"
                                android:outlineAmbientShadowColor="@color/dgry"
                                android:outlineSpotShadowColor="@color/dgry"
                                android:layout_height="wrap_content">
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:padding="@dimen/margin_md"
                                    android:onClick="DriversNow"
                                    android:layout_height="match_parent">
                                    <TextView
                                        android:id="@+id/t21"
                                        android:onClick="DriversNow"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/font3"
                                        android:includeFontPadding="false"
                                        android:text="0"
                                        android:layout_centerHorizontal="true"
                                        android:padding="@dimen/margin_md"
                                        android:background="@drawable/circle_shape"
                                        android:backgroundTint="@color/lgry"
                                        android:gravity="center"
                                        android:singleLine="true"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/txt_size_lg" />

                                    <TextView
                                        android:layout_centerHorizontal="true"
                                        android:layout_below="@id/t21"
                                        android:onClick="DriversNow"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/font1"
                                        android:includeFontPadding="false"
                                        android:text="Drivers"
                                        android:layout_marginTop="@dimen/margin1"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/txt_size_lg" />
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </RelativeLayout>
    </RelativeLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>