<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/tool"
        layout="@layout/my_tool1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/margin"
        android:paddingTop="@dimen/margin"

        android:paddingLeft="@dimen/margin1"
        android:paddingRight="@dimen/margin1"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/size06"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:text="@string/wallet"
            android:textColor="@color/black"
            android:fontFamily="@font/font2"
            android:textSize="@dimen/txt_size_xlg"
            android:layout_marginTop="@dimen/margin_md"
            android:includeFontPadding="false"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:text="@string/plz_ent_bnk_dt"
            android:layout_below="@id/txt1"
            android:fontFamily="@font/font1"
            android:layout_marginTop="@dimen/margin1"
            android:textColor="@color/dgry"
            android:lineSpacingExtra="@dimen/sizesm1"
            android:textSize="@dimen/txt_size_lg"
            android:layout_marginRight="@dimen/margin_xlg"
            android:includeFontPadding="false"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@id/txt2"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_xlg"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt3"
                android:layout_width="wrap_content"
                android:text="Balance: 0 Points"
                android:textColor="@color/app_color"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/font2"
                android:textSize="@dimen/txt_size_xlg"
                android:layout_marginTop="@dimen/margin_lg"
                android:includeFontPadding="false"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/bt1"
                android:layout_width="match_parent"
                android:layout_below="@id/txt3"
                android:layout_marginTop="@dimen/margin_xxxlg"
                android:background="@drawable/bt_bg"
                android:fontFamily="@font/font2"
                android:textColor="@color/white"
                android:layout_marginBottom="@dimen/margin"
                android:includeFontPadding="false"
                android:textAllCaps="false"
                android:textSize="@dimen/txt_size_lg"
                android:text="@string/req_for_width"
                android:backgroundTint="@color/app_color"
                android:layout_height="@dimen/size62"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>