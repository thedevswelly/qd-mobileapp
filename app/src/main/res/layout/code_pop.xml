<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white1"
    app:cardCornerRadius="@dimen/margin_lg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/margin_lg"
        android:paddingTop="@dimen/margin"

        android:paddingLeft="@dimen/margin1"
        android:paddingRight="@dimen/margin1"

        android:layout_height="wrap_content">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab1"
            android:layout_width="wrap_content"
            android:src="@drawable/left_icon"
            android:tint="@color/white1"
            android:scaleX=".7"
            android:backgroundTint="@color/app_color"
            app:backgroundTint="@color/app_color"
            android:scaleY=".7"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:text="@string/enter_code"
            android:textColor="@color/black"
            android:fontFamily="@font/font2"
            android:textSize="@dimen/txt_size_xlg"
            android:layout_marginTop="@dimen/margin_md"
            android:includeFontPadding="false"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:text="@string/ent_referal_msg"
            android:layout_below="@id/txt1"
            android:fontFamily="@font/font1"
            android:layout_marginTop="@dimen/margin_lg"
            android:textColor="@color/dgry"
            android:lineSpacingExtra="@dimen/sizesm1"
            android:textSize="@dimen/txt_size_lg"
            android:layout_marginRight="@dimen/margin_xlg"
            android:includeFontPadding="false"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@id/txt2"

            android:layout_marginTop="@dimen/margin_lg"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:paddingLeft="@dimen/margin1"
                    android:paddingRight="@dimen/margin"
                    android:layout_marginTop="@dimen/margin_lg"
                    android:background="@drawable/round_ract0"
                    android:layout_height="@dimen/size62">

                    <EditText
                        android:id="@+id/et1"
                        android:singleLine="true"
                        android:background="@null"
                        android:fontFamily="@font/font1"
                        android:textStyle="bold"
                        android:textSize="@dimen/txt_size_lg"
                        android:includeFontPadding="false"
                        android:textColor="@color/black"
                        android:layout_marginLeft="@dimen/sizesm1"
                        android:inputType="text"
                        android:layout_centerVertical="true"
                        android:hint="@string/enter_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <Button
                    android:id="@+id/bt1"
                    android:layout_width="match_parent"
                    android:background="@drawable/bt_bg"
                    android:fontFamily="@font/font2"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/margin_lg"
                    android:includeFontPadding="false"
                    android:textAllCaps="false"
                    android:textSize="@dimen/txt_size_lg"
                    android:text="@string/submit"
                    android:backgroundTint="@color/app_color"
                    android:layout_height="@dimen/size62"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>