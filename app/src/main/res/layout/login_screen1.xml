<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingLeft="@dimen/margin1"
    android:paddingRight="@dimen/margin1"
    android:paddingBottom="@dimen/margin"
    android:paddingTop="@dimen/margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab1"
        android:layout_width="wrap_content"
        android:src="@drawable/left_icon"
        android:tint="@color/white"
        android:onClick="BackNow"
        android:scaleY=".8"
        android:scaleX=".8"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:text="@string/ent_your_number"
        android:textColor="@color/black"
        android:fontFamily="@font/font2"
        android:layout_below="@id/fab1"
        android:textSize="@dimen/txt_size_xlg"
        android:layout_marginTop="@dimen/margin_lg"
        android:includeFontPadding="false"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_below="@id/txt1"
        android:fontFamily="@font/font1"
        android:layout_marginTop="@dimen/margin1"
        android:textColor="@color/dgry"
        android:lineSpacingExtra="@dimen/sizesm1"
        android:textSize="@dimen/txt_size_lg"
        android:layout_marginRight="@dimen/margin_xlg"
        android:includeFontPadding="false"
        android:layout_height="wrap_content"/>

   <Button
        android:id="@+id/bt1"
        android:layout_width="match_parent"
       android:layout_alignParentBottom="true"
        android:background="@drawable/bt_bg"

        android:layout_marginBottom="@dimen/margin"
        android:fontFamily="@font/font2"
        android:textColor="@color/white"
        android:includeFontPadding="false"
        android:textAllCaps="false"
        android:onClick="NextNow"
        android:textSize="@dimen/txt_size_lg"
        android:text="@string/submit"
        android:backgroundTint="@color/app_color"
        android:layout_height="@dimen/size62"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/txt2"
        android:layout_marginTop="@dimen/margin_xlg"
        android:orientation="horizontal"
        android:weightSum="6"
        android:paddingLeft="@dimen/margin"
        android:paddingRight="@dimen/margin"
        android:layout_height="@dimen/size6">

        <EditText
            android:id="@+id/et1"
            android:singleLine="true"
            android:fontFamily="@font/font1"
            android:textStyle="bold"
            android:includeFontPadding="false"
            android:paddingLeft="@dimen/margin1"
            android:paddingRight="@dimen/margin1"
            android:background="@drawable/round_ract0"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="@dimen/txt_size_md1"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/et2"
            android:singleLine="true"
            android:fontFamily="@font/font1"
            android:textStyle="bold"
            android:paddingLeft="@dimen/margin1"
            android:paddingRight="@dimen/margin1"
            android:includeFontPadding="false"
            android:background="@drawable/round_ract0"
            android:inputType="number"
            android:maxLength="1"
            android:layout_marginLeft="@dimen/margin"
            android:textSize="@dimen/txt_size_md1"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/et3"
            android:singleLine="true"
            android:fontFamily="@font/font1"
            android:textStyle="bold"
            android:paddingLeft="@dimen/margin1"
            android:includeFontPadding="false"
            android:paddingRight="@dimen/margin1"
            android:background="@drawable/round_ract0"
            android:inputType="number"
            android:maxLength="1"
            android:layout_marginLeft="@dimen/margin"
            android:textSize="@dimen/txt_size_md1"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/et4"
            android:singleLine="true"
            android:fontFamily="@font/font1"
            android:textStyle="bold"
            android:paddingLeft="@dimen/margin1"
            android:includeFontPadding="false"
            android:paddingRight="@dimen/margin1"
            android:background="@drawable/round_ract0"
            android:inputType="number"
            android:maxLength="1"
            android:layout_marginLeft="@dimen/margin"
            android:textSize="@dimen/txt_size_md1"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/et5"
            android:singleLine="true"
            android:fontFamily="@font/font1"
            android:textStyle="bold"
            android:paddingLeft="@dimen/margin1"
            android:includeFontPadding="false"
            android:paddingRight="@dimen/margin1"
            android:background="@drawable/round_ract0"
            android:inputType="number"
            android:maxLength="1"
            android:layout_marginLeft="@dimen/margin"
            android:textSize="@dimen/txt_size_md1"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/et6"
            android:singleLine="true"
            android:fontFamily="@font/font1"
            android:textStyle="bold"
            android:paddingLeft="@dimen/margin1"
            android:includeFontPadding="false"
            android:paddingRight="@dimen/margin1"
            android:background="@drawable/round_ract0"
            android:inputType="number"
            android:maxLength="1"
            android:layout_marginLeft="@dimen/margin"
            android:textSize="@dimen/txt_size_md1"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
    </LinearLayout>
</RelativeLayout>