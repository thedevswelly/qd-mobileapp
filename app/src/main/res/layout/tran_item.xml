<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl1"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin1">

        <RelativeLayout
            android:id="@+id/rgt_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            >

            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font2"
                android:includeFontPadding="false"
                android:text="0"
                android:textColor="@color/dgry"
                android:textSize="@dimen/txt_size_md1" />


        </RelativeLayout>

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/rgt_rl"
            android:fontFamily="@font/font2"
            android:text="@string/intestrial"
            android:includeFontPadding="false"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_lg" />
        <TextView
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt1"
            android:layout_marginTop="@dimen/margin"
            android:layout_alignParentLeft="true"
            android:text="date"
            android:layout_toLeftOf="@id/rgt_rl"
            android:fontFamily="@font/font2"
            android:includeFontPadding="false"
            android:textColor="@color/dgry"
            android:textSize="@dimen/txt_size_md1" />
    </RelativeLayout>
</RelativeLayout>