<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_lg"
    android:background="@drawable/round_ract0"
    android:backgroundTint="@color/white1"
    android:padding="@dimen/margin">

    <RelativeLayout
        android:id="@+id/hd1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">



            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/margin"
                android:fontFamily="@font/font2"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="Lorem Ipsome is"

                android:textColor="@color/black"
                android:textSize="@dimen/txt_size_lg" />

            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt1"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginTop="@dimen/margin"
                android:fontFamily="@font/font1"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="Lorem Ipsome is the dummy content for "
                android:textColor="@color/dgry"
                android:textSize="@dimen/txt_size" />

            <TextView
                android:id="@+id/txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt2"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginTop="@dimen/margin"
                android:fontFamily="@font/font1"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="Lorem Ipsome is the dummy content for "
                android:textColor="@color/dgry"
                android:textSize="@dimen/txt_size" />
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>