<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl1"
    android:paddingTop="@dimen/margin"
    android:paddingBottom="@dimen/margin1"
    android:paddingLeft="@dimen/margin"
    android:paddingRight="@dimen/margin"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    >

    <RelativeLayout
        android:id="@+id/hd1"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:lineSpacingExtra="@dimen/margin"
                android:layout_alignParentRight="true"
                android:text="Lorem Ipsome is the dummy content for "
                android:includeFontPadding="false"
                android:fontFamily="@font/font1"
                android:layout_centerVertical="true"
                android:textColor="@color/dgry"
                android:textSize="@dimen/txt_size_md"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="Lorem Ipsome is"
                android:includeFontPadding="false"
                android:fontFamily="@font/font_mid"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/txt2"
                android:textSize="@dimen/txt_size_md1"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:background="@color/gry"
    android:layout_marginTop="@dimen/margin1"
    android:layout_below="@id/hd1"
    android:layout_height="1dp"/>

</RelativeLayout>